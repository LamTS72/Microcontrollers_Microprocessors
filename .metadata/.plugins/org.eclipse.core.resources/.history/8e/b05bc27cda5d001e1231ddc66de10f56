#include "led7seg.h"

int index_led_v = 0;
int index_led_h = 0;
int led_buffer[4] = {0,0,0,0};

void display7SEG(int num){
	uint8_t signal[10] = {0xC0, 0xF9, 0xA4, 0xB0, 0x99, 0x12, 0x82, 0xF8, 0x80, 0x90};
  	for(int i = 0; i < 7; i++ ){
  		HAL_GPIO_WritePin(GPIOB, PB0_Pin << i, (signal[num] >> i) & 0x01);
  	}
}
void clearAll_7SEG(){
	HAL_GPIO_WritePin(GPIOB, PB0_Pin |PB1_Pin|PB2_Pin|PB3_Pin|PB4_Pin|PB5_Pin|PB6_Pin,SET);
}
void update7SEG_v ( int index){
	HAL_GPIO_WritePin(GPIOA, PA7_Pin | PA8_Pin , SET);
	switch(index){
	case 0:
		HAL_GPIO_WritePin(PA7_GPIO_Port, PA7_Pin, RESET);
		display7SEG(led_buffer[index]);
		break;
	case 1:
		HAL_GPIO_WritePin(PA8_GPIO_Port, PA8_Pin, RESET);
		display7SEG(led_buffer[index]);
		break;
	}
}
void update7SEG_h ( int index){
	HAL_GPIO_WritePin(GPIOA, PA9_Pin |PA10_Pin , SET);
	switch(index){
	case 0:
		HAL_GPIO_WritePin(PA9_GPIO_Port, PA9_Pin, RESET);
		display7SEG(led_buffer[index+2]);
		break;
	case 1:
		HAL_GPIO_WritePin(PA10_GPIO_Port, PA10_Pin, RESET);
		display7SEG(led_buffer[index+2]);
		break;
	}
}
void updateClockBuffer_vertical(int num){
	led_buffer[0] = (num > 9)? num/10 : 0;
	led_buffer[1] = num%10;

}
void updateClockBuffer_horizontal(int num){
	led_buffer[2] = (num > 9)? num/10 : 0;
	led_buffer[3] = num%10;
}
void led7seg_hrun(){
	if(timer3_flag == 1){
	  update7SEG_h(index_led_h);
	  if(index_led_h >= 1){
		  index_led_h = 0;
	  }
	  else{
		 index_led_h++;
	  }
	  setTimer3(20);
	}

}

void led7seg_vrun(){
	if(timer2_flag == 1){
	  update7SEG_v(index_led_v);
	  if(index_led_v >= 1){
		  index_led_v = 0;
	  }
	  else{
		 index_led_v++;
	  }
	  setTimer2(20);
	}
}



