#include "fsm.h"

int state = 1;
void fsm_mode_run(){
	switch(state){
//	case 0:
//		state = MODE_1;
//		break;
	case MODE_1:
		if(timer1_flag == 1){
//			display7SEG(counter_h);
//			display7SEG(counter_v);
			traffic_light();
			led7seg_run();
			counter_h--;
			counter_v--;
			setTimer1(20);
		}

		break;
	case MODE_2:
		break;
	case MODE_3:
		break;
	case MODE_4:
		break;
	}
}
