#include "fsm.h"

int state = 1;
void fsm_mode_run(){
	switch(state){
//	case 0:
//		state = MODE_1;
//		break;
	case MODE_1:
		if(timer1_flag == 1){
			display7SEG(counter--);
			traffic_light();
			updateClockBuffer_horizontal(counter);
			updateClockBuffer_vertical(counter);
			setTimer1(1000);
		}
		if(timer2_flag == 1){
			update7SEG(index_led);
			setTimer2(50);
		}
		break;
	case MODE_2:
		break;
	case MODE_3:
		break;
	case MODE_4:
		break;
	}
}
