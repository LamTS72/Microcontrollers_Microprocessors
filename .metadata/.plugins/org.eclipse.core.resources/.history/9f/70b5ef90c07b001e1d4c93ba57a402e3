#include "fsm.h"

int state = 0;
void fsm_mode_run(){
	switch(state){
	case 0:
		state = MODE_1;
		led_buffer[0] = 0;
		led_buffer[1] = 0;
		led_buffer[2] = 0;
		led_buffer[3] = 0;
		setTimer0(10);
		break;
	case MODE_1:
		traffic_light_horizontal();
		traffic_light_vertical();
		traffic_led7seg();
		if(isMODE_Pressed() == 1){
			state = MODE_2;
			timer6_flag = 1;
			setTimer0(100);
		}
		break;
	case MODE_2:
		traffic_light_horizontal();
		traffic_light_vertical();
		led_buffer[0] = 0;
		led_buffer[1] = 2;
		led_buffer[2] = red_change/10;
		led_buffer[3] = red_change%10;
		led7seg_run();
		if(isMODE_Pressed() == 1){
			state = MODE_3;
			setTimer0(100);
		}
		break;
	case MODE_3:
		traffic_light_horizontal();
		traffic_light_vertical();
		led_buffer[0] = 0;
		led_buffer[1] = 3;
		led_buffer[2] = yellow_change/10;
		led_buffer[3] = yellow_change%10;
		led7seg_run();
		if(isMODE_Pressed() == 1){
			state = MODE_4;
			setTimer0(100);
		}
		break;
	case MODE_4:
		traffic_light_horizontal();
		traffic_light_vertical();
		led_buffer[0] = 0;
		led_buffer[1] = 4;
		led_buffer[2] = green_change/10;
		led_buffer[3] = green_change%10;
		led7seg_run();
		if(isMODE_Pressed() == 1){
			state = 0;
			setTimer0(25);
		}
		break;
	}
}
